{
  "name": "@sandstack/neuron",
  "version": "0.0.0",
  "description": "A framework agnostic javascript global state manager.",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && vite build --config configs/index.config && vite build --config configs/vanilla.config && vite build --config configs/react.config && vite build --config configs/modules.config && vite build --config configs/persist.config && vite build --config configs/slices.config",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook:run": "storybook dev -p 6006",
    "storybook:clean-cache": "rimraf node_modules/.cache/storybook",
    "publish:dry": "npm publish --dry-run",
    "npm:pack": "npm pack --production"
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./vanilla": {
      "types": "./dist/vanilla.d.ts",
      "require": "./dist/vanilla.cjs",
      "default": "./dist/vanilla.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "require": "./dist/react.cjs",
      "default": "./dist/react.js"
    },
    "./modules": {
      "types": "./dist/modules.d.ts",
      "require": "./dist/modules.cjs",
      "default": "./dist/modules.js"
    },
    "./modules/persist": {
      "types": "./dist/modules/persist/index.d.ts",
      "require": "./dist/modules/persist/index.cjs",
      "default": "./dist/modules/persist/index.js"
    },
    "./modules/slices": {
      "types": "./dist/modules/slices/index.d.ts",
      "require": "./dist/modules/slices/index.cjs",
      "default": "./dist/modules/slices/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/*",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md"
  ],
  "keywords": [
    "npm",
    "module",
    "node",
    "javascript",
    "typescript",
    "global-state-management",
    "state-manager",
    "global",
    "neuron",
    "neuronjs",
    "@sandstack",
    "@neuron",
    "sandstack"
  ],
  "author": "David A. Sanders <dsanders_m633@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hjrdave/NeuronGSM/issues"
  },
  "homepage": "https://github.com/hjrdave/NeuronGSM#readme",
  "devDependencies": {
    "@sandstack/neuron": "file:sandstack-neuron-0.0.0.tgz",
    "@storybook/addon-essentials": "^7.5.1",
    "@storybook/addon-interactions": "^7.5.1",
    "@storybook/addon-links": "^7.5.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.1",
    "@storybook/react": "^7.5.1",
    "@storybook/react-vite": "^7.5.1",
    "@storybook/testing-library": "^0.2.2",
    "@types/jest": "^29.5.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitejs/plugin-react-swc": "^3.4.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.1",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
